{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "init",
  "title": "Initialize a NX monorepo for Angular Experts architecture",
  "type": "object",
  "properties": {
    "contexts": {
      "type": "array",
      "description": "Available business contexts",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "prefix": {
      "type": "string",
      "description": "Company prefix",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    },
    "appSuffix": {
      "type": "string",
      "description": "Suffix for applicatons",
      "$default": {
        "$source": "argv",
        "index": 2
      }
    }
  },
  "required": []
}
