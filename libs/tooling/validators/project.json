{
  "name": "tooling-validators",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/tooling/validators/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/tooling/validators",
        "main": "libs/tooling/validators/src/index.ts",
        "tsConfig": "libs/tooling/validators/tsconfig.lib.json",
        "assets": ["libs/tooling/validators/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs tooling-validators {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/tooling/validators/**/*.ts",
          "libs/tooling/validators/generators.json",
          "libs/tooling/validators/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/tooling/validators/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
