{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ax/nx-plugin-generators": ["libs/tooling/generators/src/index.ts"],
      "@ax/tooling/nx-plugin": ["libs/tooling/nx-plugin/src/index.ts"],
      "@ax/validators": ["libs/tooling/validators/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "libs/tooling/nx-plugin/src/generators/lib/files"]
}
